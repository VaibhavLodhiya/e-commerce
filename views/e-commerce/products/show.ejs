<%- include('../../partials/header') %>

  <div class="card container-fluid" style="border-radius: 0px;height: 90vh;">
    <div class="row">
      <div class="col-lg-6 mx-0 px-0" >
        <div class="image" style="max-height: 90vh;border-radius: 0px !important;justify-content: center;">
          <img
            loading="lazy"
            class="img-fluid"
            style="border-radius: 0px;max-height: 100%;"
            src=<%= foundproduct.image %>
            alt=<%= foundproduct.title %>
          />
        </div>
      </div>
      <div class="col-lg-6 mx-0 px-3 py-3">
        <div class="infos">
          <h1 class="">
            <a href="/products/<%= foundproduct._id %>/show">
              <%= foundproduct.title %>

            </a>

          </h1>
          <div class="reviews">
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
            <i class="fa fa-star"></i>
          </div>
          <div class="price">
            <h3>$<%= foundproduct.price %></h3>
          </div>
          <div class="more-infos">
            <h5>
                      <%= foundproduct.category.toUpperCase() %>
            </h5>

            <h5>
              <a href="/products/<%= foundproduct._id %>/show">Product Details</a>
            </h5>
            <p class="lead my-3"><%= foundproduct.description %> </p>
          </div>
          <div class="info-content"></div>
          <div class="buttons">
            <button type="button" name="button">
              <i class="fa fa-shopping-cart"></i>Add to Cart
            </button>
            <button type="button" name="button">Buy Now</button>
          </div>
        </div>
      </div>
    </div>
  </div>

