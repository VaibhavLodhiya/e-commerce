<%- include('../../partials/header') %>

<div id="mySidenav" class="sidenav">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
  <h3 class="sidenav-title text-center">CATEGORIES</h3>
  <a class="my-4" href="/products">All</a>
  <% for(cat of uniqecat){%>
  <a class="my-4" href="/products?category=<%= cat %>"><%= cat %> </a>
  <% } %>
</div>

<div class="menu-btn" onclick="openNav()">
  <i class="fa fa-arrow-right fa-2x"></i>
</div>
<div class="container text-center">
  <h2 class="font-weight-bold mt-3" style="color: #343f3e;"><%= `${currentcat[0].toUpperCase() + currentcat.slice(1)} Products`%> </h1>
</div>
<% for(let product of allproducts) {%>

<div class="card-container container">
  <div class="card mx-0 px-0">
    <div class="container-fluid">
      <div class="row" style="height: 100%">
        <div class="col-lg-6 mx-0 px-0">
          <div class="image">
            <img
              loading="lazy"
              class="img-fluid"
              src=<%= product.image %>
              alt=<%= product.title %>
            />
          </div>
        </div>
        <div class="col-lg-6 mx-0 px-3 py-3">
          <div class="infos">
            <h1 class="">
              <a href="/products/<%= product._id %>"
                ><%= product.title %>
              </a>
            </h1>
            <div class="reviews">
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
            </div>
            <div class="price">
              <h3>$<%= product.price %></h3>
            </div>
            <div class="more-infos">
              <h5>
                <a href="/products/<%= product._id %>/show">Description </a>
              </h5>
            </div>
            <div class="info-content"></div>
            <div class="buttons container">
              <div class="row">
                <div class="col-md-6"><button type="button" name="button">
                <i class="fa fa-shopping-cart"></i>Cart
              </button></div>
                <div class="col-md-6"><button type="button" name="button"><i class="fas fa-shopping-basket"></i>Buy</button></div>

            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% } %>
<section class="colored-section" id="testimonials">
  <div id="testimonial-carousel" class="carousel slide" data-ride="false">
    <div class="carousel-inner">
      <div class="carousel-item active container-fluid">
        <h3 class="testimonial-text">I like it, products here are affordable and also good</h3>
        <img class="testimonial-image" src="https://thumbs.dreamstime.com/b/barber-salon-barbershop-hairdresser-skin-care-routine-fashion-model-cool-man-stylish-man-ultimate-bad-boy-barber-salon-barbershop-182774611.jpg" alt="lady-profile">
        <em>Beverly, Illinois</em>
      </div>
      <div class="carousel-item container-fluid">
        <h2 class="testimonial-text">A great website to get best deals on best products.Looking forward to buy many more things</h2>
        <img class="testimonial-image" src="https://images.pexels.com/photos/1391498/pexels-photo-1391498.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" alt="dog-profile">
        <em>Pebbles, New York</em>

      </div>

    </div>
    <a class="carousel-control-prev" href="#testimonial-carousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#testimonial-carousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>



</section>
 <%- include('../../partials/footer') %>
