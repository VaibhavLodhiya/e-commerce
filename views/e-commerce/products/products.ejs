<%- include('../../partials/header') %>

<div id="mySidenav" class="sidenav">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
  <h3 class="sidenav-title text-center">CATEGORIES</h3>
  <a class="my-4" href="/products">All</a>
  <% for(cat of uniqecat){%>
  <a class="my-4" href="/products?category=<%= cat %>"><%= cat %> </a>
  <% } %>
</div>

<div class="menu-btn" onclick="openNav()">
  <i class="fa fa-arrow-right fa-2x"></i>
</div>
<div class="container text-center">
  <h2 class="font-weight-bold mt-3"><%= `${currentcat[0].toUpperCase() + currentcat.slice(1)} Products`%> </h1>
</div>
<% for(let product of allproducts) {%>

<div class="card-container container">
  <div class="card mx-0 px-0">
    <div class="container-fluid">
      <div class="row" style="height: 100%">
        <div class="col-lg-6 mx-0 px-0">
          <div class="image">
            <img
              loading="lazy"
              class="img-fluid"
              src=<%= product.image %> 
              alt=<%= product.title %> 
            />
          </div>
        </div>
        <div class="col-lg-6 mx-0 px-3 py-3">
          <div class="infos">
            <h1 class="">
              <a href="/products/<%= product._id %>"
                ><%= product.title %>
              </a>
            </h1>
            <div class="reviews">
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
            </div>
            <div class="price">
              <h3>$<%= product.price %></h3>
            </div>
            <div class="more-infos">
              <h5>
                <a href="/products/<%= product._id %>/show">Description </a>
              </h5>
            </div>
            <div class="info-content"></div>
            <div class="buttons">
              <button type="button" name="button">
                <i class="fa fa-shopping-cart"></i>Add to Cart
              </button>
              <button type="button" name="button">Buy Now</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% } %> <%- include('../../partials/footer') %>
